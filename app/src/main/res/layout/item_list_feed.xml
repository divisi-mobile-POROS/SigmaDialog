<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_item_feed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_medium_extra"
    android:layout_marginRight="@dimen/margin_medium_extra"
    android:layout_marginTop="@dimen/margin_small"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/corner_small"
    app:cardElevation="@dimen/elevation_small">

    <TextView
        android:id="@+id/text_item_feed"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:padding="@dimen/padding_medium"
        android:text="@string/lorem_short"
        android:textColor="@color/colorBlack" />

</android.support.v7.widget.CardView>